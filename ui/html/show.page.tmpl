{{template "base" .}}

{{define "title"}}News #{{.Movies.ID}}{{end}}

{{define "main"}}
    {{with .Movies}}
    <div class='news'>
        <div class='metadata'>
            <strong>{{.Title}}</strong>
            <span>#{{.ID}}</span>
        </div>
        <pre><code>{{.Content}}</code></pre>
        <div class='metadata'>
           <time>Created: {{humanDate .Created}}</time>
        </div>
    </div>
    {{end}}
{{end}}

